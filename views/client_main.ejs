      $('#delApp').click(function(){
            var check = confirm("Do you want delete selected app?")
            if(check) {
                var selectedApp = $('#select_APP option:selected').val()
                $.ajax({
                    url: "/admin/delApp",
                    dataType: "json",
                    method: "get",
                    data : {"id" : selectedApp},
                    success: function(result) {
                        if(!result.result) {
